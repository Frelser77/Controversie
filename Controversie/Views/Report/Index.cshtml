
@{
    ViewBag.Title = "Report";
}

<h2>Report</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container">
    <div class="col-4 mx-auto">

        <div class="d-flex flex-column  justify-content-center gap-3">
            <a class="btn btn-dark" href="@Url.Action("TotaleVerbaliPerTrasgressore", "Report")">
                <div class="row">
                    <div class="col-2">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <div class="col-10">

                        <span class=""> Totale Verbali per Trasgressore </span>
                    </div>
                </div>
            </a>
            <a class="btn btn-dark" href="@Url.Action("TotalePuntiDecurtatiPerTrasgressore", "Report")">
                <div class="row">
                    <div class="col-2">
                        <i class="bi bi-dash-circle"></i>
                    </div>
                    <div class="col-10">
                        <span> Totale Punti Decurtati per Trasgressore </span>
                    </div>
                </div>
            </a>
            <a class="btn btn-dark" href="@Url.Action("ViolazioniOltre10Punti", "Report")">
                <div class="row">
                    <div class="col-2">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    <div class="col-10">
                        <span> Violazioni Oltre 10 Punti </span>
                    </div>
                </div>
            </a>
            <a class="btn btn-dark" href="@Url.Action("ViolazioniImportoMaggiore400", "Report")">
                <div class="row">
                    <div class="col-2">
                        <i class="bi bi-currency-euro"></i>
                    </div>
                    <div class="col-10">

                        <span> Violazioni Importo Maggiore di 400€ </span>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
}